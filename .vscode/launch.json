{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "4800",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/server"
        },
        {
            "name": "Client: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "client.src.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "4810",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/client"
        }
    ],
    "compounds": [
        {
            "name": "Server + Client",
            "configurations": [
                "Server: FastAPI",
                "Client: FastAPI"
            ],
            "stopAll": true
        }
    ]
}